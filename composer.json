{
    "name": "bzga/bzga-beratungsstellensuche",
    "type": "typo3-cms-extension",
    "description": "Beratungsstellensuche der BZgA",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Sebastian Schreiber",
            "email": "ssch@hauptweg-nebenwege.de",
            "role": "Developer"
        },
        {
            "name": "Sebastian Hebler",
            "email": "sh@hauptweg-nebenwege.de",
            "role": "Projectmanager"
        }
    ],
    "autoload": {
        "psr-4": {
            "Bzga\\BzgaBeratungsstellensuche\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bzga\\BzgaBeratungsstellensuche\\Tests\\": "Tests/"
        }
    },
    "require": {
        "typo3/cms-core": "^9.5.13",
        "typo3/cms-scheduler": "^9.5.13",
        "typo3/cms-reports": "^9.5.13",
        "symfony/serializer": "^3.0",
        "sjbr/static-info-tables": "^6.0",
        "jambagecom/static-info-tables-de": "^6.0",
        "netzmacht/php-leaflet": "^1.1",
        "ext-json": "*",
        "ext-simplexml": "*",
        "geocoder-php/google-maps-provider": "^4.4",
        "php-http/guzzle6-adapter": "^1.0",
        "php-http/message": "^1.7",
        "geocoder-php/nominatim-provider": "^5.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.0",
        "typo3/testing-framework": "^4.0",
        "typo3/cms-tstemplate": "^9.0",
        "typo3/cms-seo": "^9.0",
        "typo3/cms-fluid-styled-content": "^9.0",
        "typo3/cms-extensionmanager": "^9.0",
        "typo3/cms-belog": "^9.0",
        "typo3/cms-rte-ckeditor": "^9.0",
        "helhum/typo3-console": "5.*",
        "ssch/typo3-rector": "^0.2.0",
        "saschaegerer/phpstan-typo3": "^0.13.1",
        "php-parallel-lint/php-parallel-lint": "^1.2"
    },
    "replace": {
        "typo3-ter/bzga-beratungsstellensuche": "self.version"
    },
    "config": {
        "vendor-dir": ".Build/vendor"
    },
    "scripts": {
        "post-autoload-dump": [
            "TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
        ],
        "test-php-lint": [
            ".Build/vendor/bin/parallel-lint ./Classes/",
            ".Build/vendor/bin/parallel-lint ./Configuration/TCA/",
            ".Build/vendor/bin/parallel-lint ./Tests/"
        ],
        "test-php-cs-fixer": [
            "php-cs-fixer fix -v --dry-run --using-cache false --diff --diff-format=udiff"
        ],
        "php-cs-fixer": [
            "php-cs-fixer fix -v --using-cache false --diff --diff-format=udiff"
        ],
        "test-unit": [
            ".Build/vendor/bin/phpunit --colors -c Tests/Build/UnitTests.xml"
        ],
        "test-functional": [
            ".Build/vendor/bin/phpunit --colors -c Tests/Build/FunctionalTests.xml"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "9.5.x-dev"
        },
        "typo3/cms": {
            "extension-key": "bzga_beratungsstellensuche",
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/public"
        }
    }
}
